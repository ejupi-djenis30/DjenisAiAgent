# Djenis AI Agent Configuration

# ============================================
# Google Gemini API Configuration
# ============================================
# IMPORTANT: Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_OUTPUT_TOKENS=65536

# ============================================
# Agent Configuration
# ============================================
DEBUG_MODE=false
LOG_LEVEL=INFO

# ============================================
# Performance and Retry Settings
# ============================================
MAX_RETRIES=3
ACTION_DELAY=0.1

# ============================================
# Mouse Movement Settings
# ============================================
MOUSE_TOLERANCE_PX=1
MOUSE_MAX_ATTEMPTS=200
MOUSE_PATH_SEGMENTS=3
MOUSE_CURVE_JITTER=8
MOUSE_BASE_DURATION=0.2
MOUSE_MICRO_CORRECTION_DURATION=0.05

# ============================================
# Screen and Vision Settings
# ============================================
SCREEN_FOCUS_SIZE=640
SCREEN_FOCUS_HISTORY=6

# Screenshot Settings
SCREENSHOT_FORMAT=png
SCREENSHOT_SCALE=1.0
SCREENSHOT_MAX_WIDTH=0
SCREENSHOT_MAX_HEIGHT=0

# Vision API Settings
VISION_IMAGE_FORMAT=png
VISION_IMAGE_QUALITY=95
VISION_IMAGE_SCALE=1.0
VISION_IMAGE_MAX_DIM=2048

# ============================================
# Safety Settings
# ============================================
EMERGENCY_STOP_KEY=ctrl+shift+q
